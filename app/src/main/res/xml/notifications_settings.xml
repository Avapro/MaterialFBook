<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/notifications_settings">
        <SwitchPreference
            android:key="notif"
            android:title="@string/notif"
            android:summary="@string/notif_summary"
            android:defaultValue="false"/>
		<ListPreference
            android:title="@string/interval_pref"
            android:dependency="notif"
            android:summary="@string/interval_pref_description_new"
            android:key="notif_interval"
            android:entries="@array/intervalPrefTitles"
            android:entryValues="@array/intervalPrefValues"
            android:defaultValue="300000" />
        <RingtonePreference
            android:key="ringtone"
            android:dependency="notif"
            android:ringtoneType="notification"
            android:showDefault="true"
            android:showSilent="true"
            android:defaultValue="content://settings/system/notification_sound"
            android:title="@string/notification_sound"
            android:summary="@string/notification_sound_description" />
        <RingtonePreference
            android:key="ringtone_msg"
            android:dependency="notif"
            android:ringtoneType="notification"
            android:showDefault="true"
            android:showSilent="true"
            android:defaultValue="content://settings/system/notification_sound"
            android:title="@string/notification_sound_msg"
            android:summary="@string/notification_sound_description" />
        <SwitchPreference
            android:key="vibrate"
            android:dependency="notif"
            android:title="@string/vibrate"
            android:defaultValue="false"/>
        <SwitchPreference
            android:key="vibrate_double"
            android:dependency="vibrate"
            android:title="@string/vibrate_double"
            android:defaultValue="false"/>
        <SwitchPreference
            android:key="led_light"
            android:dependency="notif"
            android:title="@string/led_light"
            android:defaultValue="false"/>
        <SwitchPreference
            android:key="flashlight_as_led"
            android:dependency="notif"
            android:title="@string/flashlight_as_led"
            android:summary="@string/flashlight_as_led_summary"
            android:defaultValue="false"/>
    </PreferenceCategory>
</PreferenceScreen>