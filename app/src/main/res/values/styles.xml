<resources>

    <style name="MFB" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="android:windowTranslucentNavigation">true</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
	<!-- DarkTheme-->
    <style name="DarkTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#2b2b2b</item>
        <item name="colorPrimaryDark">#000000</item>
		<item name="android:windowTranslucentNavigation">true</item>
        <item name="colorAccent">#000000</item>
    </style>
    <style name="AppWithToolbar" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/FABNormal</item>
    </style>
    <style name="MFB_Settings" parent="@style/AppWithToolbar">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:editTextColor">@color/colorPrimary</item>
    </style>

</resources>
